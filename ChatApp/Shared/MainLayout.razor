@inherits LayoutComponentBase
@using MudBlazor
@namespace ChatApp.Shared

<MudThemeProvider Theme="_myCustomTheme" IsDarkMode="_isDarkMode" />
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="4" Color="Color.Primary">
        <MudText Typo="Typo.h6" Class="text-white">ChatApp</MudText>
        <MudSpacer />
        <MudIconButton Icon="@ThemeIcon" Color="Color.Inherit" OnClick="ToggleDarkMode" />
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" OnClick="ToggleNavMenu" />
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen" Elevation="1" ClipMode="DrawerClipMode.Always">
        <MudNavMenu>
            <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">
                Home
            </MudNavLink>
            <MudNavLink Href="chat" Icon="@Icons.Material.Filled.ChatBubble">
                Chat
            </MudNavLink>
        </MudNavMenu>
    </MudDrawer>

    <MudMainContent>
        <MudContainer>
            @Body <!-- This renders the current page -->
        </MudContainer>
    </MudMainContent>

    <MudDivider />

    <MudText Align="Align.Center" Typo="Typo.body1">© 2024 - Chat App</MudText>
</MudLayout>

@code {
    private bool _drawerOpen = false;
    private bool _isDarkMode = false;
    private string ThemeIcon => _isDarkMode
    ? Icons.Material.Filled.LightMode
    : Icons.Material.Filled.ModeNight;

    // Define your custom MudTheme here
    private MudTheme _myCustomTheme = new MudTheme();

    private void ToggleNavMenu()
    {
        _drawerOpen = !_drawerOpen;
    }

    private void ToggleDarkMode()
    {
        _isDarkMode = !_isDarkMode;
    }
}